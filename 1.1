import RPi.GPIO as GPIO
import time

#set GPIO mode
GPIO.setmode(GPIO.BCM)
GPIO.setwarnings(False)

#set GPIO pin mode
GPIO.setup(7, GPIO.OUT)
GPIO.setup(8, GPIO.OUT)
GPIO.setup(9, GPIO.OUT)
GPIO.setup(10, GPIO.OUT)

#turn all motor off
GPIO.output(7, 0)
GPIO.output(8, 0)
GPIO.output(9, 0)
GPIO.output(10, 0)

print("motors off")

#turn right motor forwards
GPIO.output(9, 0)
GPIO.output(10, 1)


#turn left motor forwards
GPIO.output(7,0)
GPIO.output(8,1)

print("left fwd")


#wait 1 second
time.sleep(1)

#reset the GPIO pins (motors off)
GPIO.cleanup()